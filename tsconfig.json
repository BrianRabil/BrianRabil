{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/app/*": ["app/*"],
			"@/components/*": ["components/*"],
			"@/lib/*": ["lib/*"],
			"@/markdown/*": ["markdown/*"]
		},
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"tsBuildInfoFile": "node_modules/.cache/tsbuild"
	},
	"exclude": ["node_modules"],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/pages/_app.js",
		".next/types/**/*.ts",
		"scripts"
	]
}
